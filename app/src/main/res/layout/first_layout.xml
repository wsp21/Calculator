<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dee2e6">
        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:layout_weight="3"
            android:textSize="55dp"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:paddingTop="50dp"
            android:paddingLeft="35dp">

        </TextView>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button

                android:id="@+id/btn_clean"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f9844a"
                android:text="AC"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_del"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="DEL"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_sci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="sci"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_divide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="/"
                android:textSize="21sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button

                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="7"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="8"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="9"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_multiply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="x"
                android:textSize="21sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <Button

                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="4"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="5"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="6"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="-"
                android:textSize="21sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button

                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="1"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="2"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="3"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="+"
                android:textSize="21sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button

                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="#f0efeb"
                android:text="0"
                android:textSize="21sp"
                android:textStyle="bold" />



            <Button

                android:id="@+id/btn_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="."
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/btn_equal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#f0efeb"
                android:text="="
                android:textSize="21sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</LinearLayout>